{
  "name": "omnipath",
  "version": "2.0.1",
  "description": "A consolidated API for file paths and URLs",
  "keywords": [
    "file",
    "path",
    "url",
    "posix",
    "mac",
    "linux",
    "windows",
    "browser",
    "browserify",
    "parse",
    "format",
    "normalize"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/James-Messinger/omnipath",
  "repository": {
    "type": "git",
    "url": "https://github.com/James-Messinger/omnipath.git"
  },
  "main": "lib/index.js",
  "browser": {
    "path": "./lib/node/path.js",
    "url": "./lib/node/url.js"
  },
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "lint": "eslint lib test --fix",
    "build": "simplifyify lib/index.js --outfile dist/omnipath.js --standalone OmniPath --bundle --debug --minify",
    "mocha": "mocha",
    "cover": "istanbul cover _mocha --dir coverage/node",
    "karma": "karma start --single-run",
    "test": "npm run build -- --test && npm run cover && npm run karma && npm run lint",
    "upgrade": "npm-check -u",
    "bump": "bump --prompt --grep dist/* --tag --push --all",
    "release": "npm run upgrade && npm test && npm run bump && npm publish"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "codacy-coverage": "^3.1.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.1",
    "eslint-config-modular": "^4.2.1",
    "istanbul": "^0.4.5",
    "karma": "^3.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.2",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-host-environment": "^1.1.4",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.1.0",
    "karma-sinon": "^1.0.5",
    "karma-verbose-reporter": "0.0.6",
    "mocha": "^5.2.0",
    "npm-check": "^5.9.0",
    "simplifyify": "^6.0.0",
    "sinon": "^6.3.4",
    "version-bump-prompt": "^4.1.0"
  },
  "dependencies": {}
}
