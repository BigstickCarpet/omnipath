{
  "name": "omnipath",
  "version": "1.1.5",
  "description": "A consolidated API for file paths and URLs",
  "keywords": [
    "file",
    "path",
    "url",
    "posix",
    "mac",
    "linux",
    "windows",
    "browser",
    "browserify",
    "parse",
    "format",
    "normalize"
  ],
  "author": {
    "name": "James Messinger",
    "url": "http://bigstickcarpet.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/bigstickcarpet/omnipath",
  "repository": {
    "type": "git",
    "url": "https://github.com/bigstickcarpet/omnipath.git"
  },
  "main": "lib/index.js",
  "browser": {
    "path": "./lib/node/path.js",
    "url": "./lib/node/url.js"
  },
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "lint": "eslint lib test --fix",
    "build": "simplifyify lib/index.js --outfile dist/omnipath.js --standalone OmniPath --debug --minify",
    "mocha": "mocha",
    "cover": "istanbul cover _mocha --dir coverage/node",
    "karma": "karma start --single-run",
    "test": "npm run build -- --test && npm run cover && npm run karma && npm run lint",
    "upgrade": "npm-check -u",
    "bump": "bump --prompt --grep lib/index.js dist/* --tag --push --all",
    "release": "npm run upgrade && npm test && npm run bump && npm publish"
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-modular": "^4.1.0",
    "simplifyify": "^1.4.1",
    "karma": "^0.13.9",
    "karma-chrome-launcher": "^0.2.0",
    "karma-cli": "0.1.0",
    "karma-coverage": "^0.5.1",
    "karma-firefox-launcher": "^0.1.6",
    "karma-ie-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-safari-launcher": "^0.1.1",
    "karma-sauce-launcher": "^0.2.14",
    "istanbul": "^0.3.19",
    "coveralls": "^2.11.4",
    "mocha": "^2.3.0",
    "chai": "^3.2.0",
    "sinon": "^1.16.1",
    "npm-check": "^5.4.5",
    "version-bump-prompt": "^1.5.1"
  },
  "dependencies": {}
}